# Indentation settings
setlocal shiftwidth=4   # How many columns of whitespace a level of indentation is worth
setlocal (no)expandtab  # Never want to see a \t
setlocal tabstop=4      # How many columns of whitespace a \t is worth
setlocal softtabstop=4  # How many columns of whitespace a tab keypress or a backspace keypress is worth
