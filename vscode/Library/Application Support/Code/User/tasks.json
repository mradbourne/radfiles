{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Test current file with NPM",
            "group": "test",
            "type": "shell",
            "command": "npm run test ${relativeFile}",
            "options": {
                "cwd": "${relativeFileDirname}"
            },
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            }
        },
        {
            "label": "Test current file with Yarn",
            "group": "test",
            "type": "shell",
            "command": "yarn run test ${relativeFile}",
            "options": {
                "cwd": "${relativeFileDirname}"
            },
            "presentation": {
                "showReuseMessage": false,
                "clear": true
            },
            "problemMatcher": []
        }
    ]
}
