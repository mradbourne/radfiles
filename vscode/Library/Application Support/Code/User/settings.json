{
  /**
  * Disable telemetry
  */
  "telemetry.telemetryLevel": "off",
  "redhat.telemetry.enabled": false,
  /**
  * Behaviour
  */
  "editor.insertSpaces": true,
  "editor.wordSeparators": "/\\()\"':,.;<>~!@#$%^&*|+=[]{}`?-",
  "files.exclude": {
    // "**/node_modules": true,
    // "**/node_modules/**": true,
    // "**/.venv": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/node_modules/**": true,
    "**/.next": true,
    "**/.yarn": true,
    "**/yarn.lock": true,
    "**/.venv": true
  },
  "editor.autoClosingBrackets": "beforeWhitespace",
  "editor.acceptSuggestionOnCommitCharacter": false,
  "security.workspace.trust.untrustedFiles": "open",
  "security.workspace.trust.enabled": false,
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.formatOnSave": false,
  "editor.formatOnPaste": false,
  "editor.formatOnType": false,
  "search.quickOpen.includeHistory": false,
  "workbench.quickOpen.preserveInput": true,
  "editor.inlineSuggest.enabled": true,
  "editor.defaultFormatter": null,
  /**
  * Fonts
  */
  "editor.fontSize": 14,
  "editor.lineHeight": 17,
  "editor.fontFamily": "JetBrains Mono, Cascadia Mono, Hack, Menlo, Consolas, Monospace",
  "debug.console.fontFamily": "JetBrains Mono, Cascadia Mono, Hack, Menlo, Consolas, Monospace",
  "terminal.integrated.fontSize": 14,
  /**
  * GUI
  */
  "editor.minimap.enabled": false,
  "editor.codeLens": true,
  "editor.accessibilitySupport": "off",
  "javascript.updateImportsOnFileMove.enabled": "prompt",
  "typescript.updateImportsOnFileMove.enabled": "prompt",
  "editor.renderWhitespace": "boundary",
  "editor.rulers": [
    80,
    100
  ],
  "explorer.confirmDragAndDrop": false,
  "editor.wordWrap": "off",
  "editor.renderLineHighlight": "none",
  "workbench.editor.revealIfOpen": true,
  "workbench.editor.enablePreview": true,
  "workbench.editor.enablePreviewFromQuickOpen": true,
  "workbench.editor.empty.hint": "hidden",
  "workbench.editor.tabSizing": "shrink",
  "workbench.editor.limit.enabled": true,
  "workbench.editor.limit.value": 4,
  "workbench.tree.indent": 18,
  "workbench.tree.renderIndentGuides": "always",
  "editor.cursorStyle": "line",
  "security.workspace.trust.banner": "always",
  "explorer.confirmDelete": false,
  "editor.cursorBlinking": "solid",
  "editor.quickSuggestionsDelay": 0,
  "window.openFilesInNewWindow": "on",
  "window.openFoldersInNewWindow": "on",
  "debug.toolBarLocation": "commandCenter",
  "debug.enableStatusBarColor": false,
  "debug.internalConsoleOptions": "neverOpen",
  "debug.showInStatusBar": "always",
  "workbench.startupEditor": "none",
  "workbench.list.openMode": "doubleClick",
  "editor.cursorSurroundingLines": 99,
  "editor.suggestSelection": "first",
  /**
  * File formatting
  */
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  /**
  * Defaults
  */
  "editor.tabSize": 4,
  "editor.detectIndentation": true,
  "editor.smoothScrolling": true,
  "search.useIgnoreFiles": true,
  "files.autoSave": "onFocusChange",
  "workbench.list.multiSelectModifier": "alt",
  "workbench.settings.editor": "json",
  /**
  * Git
  */
  "diffEditor.renderSideBySide": false,
  "git.confirmSync": false,
  "git.suggestSmartCommit": false,
  "git.openRepositoryInParentFolders": "never",
  "gitlens.hovers.enabled": false,
  "gitlens.statusBar.enabled": true,
  "gitlens.currentLine.enabled": false,
  "gitlens.hovers.currentLine.over": "line",
  "gitlens.codeLens.enabled": false,
  "gitlens.defaultGravatarsStyle": "identicon",
  "gitlens.views.repositories.showBranchComparison": false,
  "gitlens.views.repositories.showUpstreamStatus": false,
  "gitlens.views.repositories.branches.layout": "list",
  "gitlens.views.commitDetails.files.layout": "tree",
  "gitlens.menus": {
    "editor": {
      "blame": false,
      "clipboard": false,
      "compare": false,
      "history": false,
      "remote": false
    },
    "editorGroup": {
      "blame": false,
      "compare": false
    },
    "editorTab": {
      "clipboard": false,
      "compare": false,
      "history": false,
      "remote": false
    },
    "explorer": {
      "clipboard": false,
      "compare": false,
      "history": false,
      "remote": false
    },
    "scm": {
      "graph": false
    },
    "scmRepositoryInline": {
      "graph": false
    },
    "scmRepository": {
      "authors": false,
      "graph": false
    },
    "scmGroupInline": {
      "stash": false
    },
    "scmGroup": {
      "compare": false,
      "openClose": false,
      "stash": false
    },
    "scmItemInline": {},
    "scmItem": {
      "clipboard": false,
      "compare": false,
      "history": false,
      "remote": false,
      "stash": false
    }
  },
  "gitlens.showWelcomeOnInstall": false,
  "gitlens.views.commits.showBranchComparison": false,
  "gitlens.views.branches.showBranchComparison": false,
  /**
  * Language settings
  */
  // JavaScript / TypeScript
  "js/ts.implicitProjectConfig.checkJs": true,
  "javascript.validate.enable": false,
  "typescript.validate.enable": true,
  "javascript.autoClosingTags": false,
  "typescript.autoClosingTags": false,
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Python
  "python.analysis.typeCheckingMode": "basic",
  "python.languageServer": "Pylance",
  "[python]": {
    "editor.tabSize": 4,
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnType": true
  },
  // Other languages
  "css.validate": false,
  "html.autoClosingTags": false,
  "less.validate": false,
  "scss.validate": false,
  "[dockerfile]": {
    "editor.defaultFormatter": "ms-azuretools.vscode-docker"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[yaml]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  /**
  * Extensions
  */
  "extensions.experimental.affinity": {
    "vscodevim.vim": 1,
    "vscode.typescript-language-features": 1,
  },
  /**
  * Extension: VSCodeVim
  */
  "vim.leader": "<space>",
  "vim.hlsearch": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.highlightedyank.enable": true,
  "vim.showMarksInGutter": true,
  "vim.vimrc.enable": true,
  /**
  * Misc extensions
  */
  "cmake.showOptionsMovedNotification": false,
  "cmake.configureOnOpen": false,
  "github.copilot.editor.enableAutoCompletions": true,
}
